extends ../template

block variables
  - var template = 'detail'

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=product.data.image.alt src=product.data.image.url)

    .detail__information
      p.detail__information__collection=product.data.collection.data.title

      h1.detail__information__title=product.data.title

      .detail__information__content
        .detail__information__highlights
          each highlight in product.data.highlights
            p.detail__information__highlight
              if highlight.highlights_icons.toLowerCase() == 'arrow'
                svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                  path( id="Polygon_2" data-name="Polygon 2" fill="currentColor" d="M10.25,30.05l.66-2.36.05-2.59,1.93,2.31,2.31,1.93-2.59.05-2.36.66Z")
                  path( id="Polygon_1" data-name="Polygon 1" fill="currentColor" d="M30.75,9.55l-.66,2.36-.05,2.59-1.93-2.31-2.31-1.93,2.59-.05,2.36-.66Z")
                  line( id="Line_2" data-name="Line 2" stroke="currentColor" x1="14.84" y1="25.46" x2="26.16" y2="14.14")
                  circle( stroke="currentColor" fill="none" cx="20" cy="20" r="19.5")
              else
                svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                  circle( stroke="currentColor" fill="none" cx="20" cy="20" r="19.5")
                  path( fill="currentColor" d="M24.27,9.87l-2.76,8.6,8.72-2.63-8.16,4.13,8.15,4.26-8.71-2.82,2.82,8.91-4.26-8.34-4.14,8.15,2.63-8.72-8.6,2.75,8.15-4.2-8.34-4.33,8.78,2.82-2.82-8.78,4.33,8.34,4.2-8.16Z")

              span.detail__information__highlight__text!=highlight.highlights_text.replace(/\n/g, '<br>')

        .detail__information__list
          each information in product.data.informations
            p.detail__information__item
              strong.detail__information__item__title=information.informations_label

              span.detail__information__item__description=information.informations_description

        a.detail__information__link(href=product.data.link_url.url target="_blank")=product.data.link_text

        a.detail__link="Close"
          svg.detail__link__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 124 60")
            path(stroke="currentColor" fill="none" d="M62,.5c33.97,0,61.5,13.21,61.5,29.5s-27.53,29.5-61.5,29.5S.5,46.29.5,30,28.03.5,62,.5Z")
